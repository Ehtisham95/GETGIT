<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/con_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:elevation="0dp"
        android:stateListAnimator="@animator/card_click"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/con_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                card_view:srcCompat="@android:color/transparent" />

            <TextView
                android:id="@+id/con_name"
                android:layout_width="290dp"
                android:layout_height="57dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:textSize="24sp"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:layout_toEndOf="@+id/con_image"

                />

            <View
                android:layout_below="@id/con_name"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignStart="@+id/con_name"
                android:background="#d3d3d3" />

        </RelativeLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>